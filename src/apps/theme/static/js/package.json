{
  "name": "@handyman/tailwind-theme",
  "description": "",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:postcss && npm run build:cleancss",
    "build:clean": "rimraf ../static/css",
    "build:postcss": "cross-env NODE_ENV=production && dev:postcss",
    "build:cleancss": "cleancss -o ../static/css/styles.css ../static/css/styles.css",
    "dev": "npm run dev:postcss",
    "dev:postcss": "postcss src/tailwind.css -o ../css/tailwind.css"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.1"
  }
}
